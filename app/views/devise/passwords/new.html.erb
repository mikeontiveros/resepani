<div class="devise_view">
<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

    <%= devise_error_messages! %>

    <div class="field"><p>
        <%= f.label "E-mail" %><br />
        <%= f.email_field :email, autofocus: true, :class => 'devise_field_box' %>
    </p></div>

    <div class="actions"><p>
        <%= f.submit "Send me reset password instructions.", :class => 'devise_button' %>
    </p></div>

<% end %>

<%= render "devise/shared/links" %>
</div>
