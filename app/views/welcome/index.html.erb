        <h2>Parent Options</h2>
        <ul>
            <li><%= link_to "View Personal Profile", user_path(current_user) %></li>

            <li><%= link_to "Find Nearby Members", users_path %></li>

            <li><%= link_to "All My Children", children_path %></li>
