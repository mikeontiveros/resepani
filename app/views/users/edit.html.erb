<h2>Update Your Profile</h2>

<%= form_for current_user do |f| %>

    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

    <div>
        <%= f.label :latitude %>
        <%= f.number_field :latitude, :step => 'any' %>
    </div>

    <div>
        <%= f.label :longitude %>
        <%= f.number_field :longitude, :step => 'any' %>
    </div>

    <%= f.submit "Submit these changes!" %>

<% end %>

<%= link_to "Back to root!", root_path %>
